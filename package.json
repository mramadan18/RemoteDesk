{
  "name": "remotedesk",
  "version": "1.0.0",
  "description": "RemoteDesk - remote control with WebRTC and multi-mouse",
  "main": "app/main/main.js",
  "scripts": {
    "server": "node server/index.js",
    "server:dev": "nodemon --watch server server/index.js",
    "app": "wait-on tcp:5005 && electron .",
    "dev": "concurrently -k -n server,app -c blue,green \"npm:server:dev\" \"npm:app\"",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder -w"
  },
  "keywords": [
    "electron",
    "webrtc",
    "remotedesk",
    "remote-control"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^5.1.0",
    "uuid": "^11.1.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3",
    "nodemon": "^3.1.10",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.remotedesk.app",
    "productName": "RemoteDesk",
    "asar": true,
    "files": [
      "app/**/*",
      "server/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "dir"
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}"
    }
  }
}
